<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<h5><%= link_to "Edit this task", edit_path(@task)%></h5>
<h5><%= link_to "Back to List", tasks_path%></h5>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
